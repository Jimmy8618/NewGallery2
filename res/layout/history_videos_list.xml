<?xml version="1.0" encoding="utf-8"?><!-- Created By Spreadst -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.example.demoformyproject.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">
        <!-- SPRD:Add for drm feature @{ -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/default_bg"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/drmlock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="46dp"
                android:layout_marginLeft="64dp"
                android:visibility="gone"
                android:src="@drawable/ic_drm_unlock" />
        </RelativeLayout>
        <!-- Drm feature end @} -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="5dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="#7d7d7d" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/cutoffline"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#d8d8d8" />

</LinearLayout>