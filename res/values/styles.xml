    <!-- SPRD: Add for new feature 568552 @{ -->
    <style name="NewVideoStyle" parent="android:Theme.Material.Light">
        <!-- the style of the ActionBar-->
        <item name="android:actionBarStyle">@style/NewVideoActionBarStyle</item>
        <!-- the color of the status bar -->
        <item name="android:statusBarColor">@color/actionbar_background_color_dark</item>
        <!-- the following three pointsï¼Œabout ActionMode -->
        <item name="android:actionModeStyle">@style/ActionModeStyle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_back_white</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
